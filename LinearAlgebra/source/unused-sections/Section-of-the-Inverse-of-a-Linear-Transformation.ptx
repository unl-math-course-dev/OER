   \draw [-\gt ,line width=0.5pt,-stealth]  (topleft.east) to (cleft1.north west);
  \draw [-\gt ,line width=0.5pt,-stealth]  (bottomleft.east) to (cleft1.south west);
     \end{tikzpicture}
    </latex-image>
</image>

